---
import { Image } from "astro:assets";
import RedPanda from "@/assets/red-panda.png";
import { SocialLinks } from "@/components/social-links";
import { buttonVariants } from "@/components/ui/button";
import Layout from "@/layouts/layout.astro";
import { Presentation, Mail } from "lucide-astro";
---

<Layout>
  <div class='flex flex-col flex-1 justify-center items-center gap-4'>
    <Image src={RedPanda} alt='A red panda' loading='eager' class="size-48 rounded-b-full" />

    <div class="flex justify-between gap-4">
      <SocialLinks client:load />

      <a href='/projects' class={buttonVariants({ variant: 'outline'})}>
        <Presentation />
        Projects
      </a>

      <a href='mailto:ibanks@ibanks.dev' class={buttonVariants({ variant: 'outline'})}>
        <Mail />
        Contact
      </a>
    </div>
  </div>
</Layout>
